# ============================================================================
# Environment Profile
# ============================================================================
ENVIRONMENT=staging
# Options: local, staging, production

# ============================================================================
# Server Configuration
# ============================================================================
SHIELD_API_HOST=0.0.0.0
SHIELD_API_PORT=8000
SHIELD_API_DEBUG=false
LOG_LEVEL=INFO

# ============================================================================
# API KEYS (DO NOT COMMIT REAL VALUES)
# ============================================================================
# Data Provider API Key (if using external data providers)
DATA_API_KEY="<YOUR_DATA_API_KEY_HERE>"

# Authentication API Key (for internal service auth)
AUTH_API_KEY="<YOUR_AUTH_API_KEY_HERE>"

# BoonMindX Capital Shield API Keys
SHIELD_API_KEY_FREE="<YOUR_FREE_API_KEY_HERE>"
SHIELD_API_KEY_PRO="<YOUR_PRO_API_KEY_HERE>"
SHIELD_API_KEY_ENTERPRISE="<YOUR_ENTERPRISE_API_KEY_HERE>"

# Staging Test Keys (for local/staging development)
STAGING_FREE_KEY="<YOUR_STAGING_FREE_KEY_HERE>"
STAGING_PRO_KEY="<YOUR_STAGING_PRO_KEY_HERE>"
STAGING_PROFESSIONAL_KEY="<YOUR_STAGING_PROFESSIONAL_KEY_HERE>"
STAGING_ENTERPRISE_KEY="<YOUR_STAGING_ENTERPRISE_KEY_HERE>"

# ============================================================================
# Rate Limiting Configuration
# ============================================================================
# Staging profile: Relaxed limits for load testing
RATE_LIMIT_PER_SECOND=200
RATE_LIMIT_BURST=400

# Per-endpoint rate limits (requests per second)
RATE_LIMIT_HEALTHZ=-1
RATE_LIMIT_DASHBOARD=-1
RATE_LIMIT_SIGNAL=200
RATE_LIMIT_FILTER=200

# ============================================================================
# Engine Configuration
# ============================================================================
ENGINE_MODE=MOCK
# Options: MOCK, LIVE
# Staging defaults to MOCK for safety

BEARHUNTER_ENGINE_PATH=testing_area
# Path to BearHunter engine (if LIVE mode)

# ============================================================================
# Capital Shield Mode
# ============================================================================
CAPITAL_SHIELD_MODE=PERMISSIVE
# Options: STRICT, PERMISSIVE
# Staging defaults to PERMISSIVE for testing

# ============================================================================
# Safety Rails Configuration
# ============================================================================
MAX_DRAWDOWN_THRESHOLD=-0.10
# Maximum drawdown threshold (-10%)

BLOCK_BEAR_BUYS=false
# Block buys during bear market regimes

HEALTH_CHECK_ENABLED=true
# Enable health check rail

ENGINE_HEALTH_CHECK_INTERVAL=60
# Engine health check interval (seconds)

ENGINE_TIMEOUT=5
# Engine timeout (seconds)

# ============================================================================
# Preset Configuration
# ============================================================================
PRESET_PATH=live_sim/presets.py
# Path to preset definitions

DEFAULT_PRESET=CONSERVATIVE
# Default preset: CONSERVATIVE, MODERATE, AGGRESSIVE

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_FORMAT=json
# Options: json, text

LOG_DIR=/var/log/boonmindx_capital_shield
# Log directory (create if doesn't exist)

LOG_ROTATION_SIZE=100MB
# Log rotation size

LOG_ROTATION_BACKUP_COUNT=10
# Number of rotated log files to keep

# Performance Logging
PERF_LOG_ENABLED=true
PERF_LOG_PATH=/var/log/boonmindx_capital_shield/performance.log

# Audit Logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_PATH=/var/log/boonmindx_capital_shield/audit.log

# Error Logging
ERROR_LOG_ENABLED=true
ERROR_LOG_PATH=/var/log/boonmindx_capital_shield/error.log

# ============================================================================
# CloudWatch / External Logging (Optional)
# ============================================================================
# AWS CloudWatch (if using AWS)
AWS_REGION=us-east-1
CLOUDWATCH_LOG_GROUP=boonmindx-capital-shield-staging
CLOUDWATCH_ENABLED=false

# External monitoring (optional)
SENTRY_DSN=
# Sentry error tracking DSN (if using Sentry)

# ============================================================================
# Database Configuration (Future)
# ============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/capital_shield
# DATABASE_POOL_SIZE=10
# DATABASE_MAX_OVERFLOW=20

# ============================================================================
# SECURITY SECRETS
# ============================================================================
# JWT Secret (for future JWT authentication)
JWT_SECRET="<YOUR_JWT_SECRET_HERE>"
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Encryption Key (if encryption is implemented)
ENCRYPTION_KEY="<YOUR_ENCRYPTION_KEY_HERE>"

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://staging.boonmindx.com

# ============================================================================
# Monitoring & Health Checks
# ============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/api/v1/healthz

# Uptime monitoring
UPTIME_MONITORING_ENABLED=true

# ============================================================================
# Deployment Configuration
# ============================================================================
# Git repository (for deployment)
GIT_REPO_URL=https://github.com/your-org/boonmindx-capital-shield.git
GIT_BRANCH=main

# Deployment user
DEPLOY_USER=capital-shield
DEPLOY_GROUP=capital-shield

# ============================================================================
# Worker Configuration (Gunicorn/Uvicorn)
# ============================================================================
WORKERS=4
# Number of worker processes

WORKER_CLASS=uvicorn.workers.UvicornWorker
# Worker class

WORKER_CONNECTIONS=1000
# Maximum connections per worker

TIMEOUT=30
# Worker timeout (seconds)

KEEPALIVE=5
# Keepalive timeout (seconds)

MAX_REQUESTS=1000
# Maximum requests per worker before restart

MAX_REQUESTS_JITTER=50
# Jitter for max requests

# ============================================================================
# Notes
# ============================================================================
# 1. Copy this file to .env: cp ENVIRONMENT_VARIABLES_TEMPLATE.env .env
# 2. Fill in actual values (especially API keys and secrets)
# 3. Set appropriate file permissions: chmod 600 .env
# 4. Never commit .env to version control
# 5. For production, use secure secret management (AWS Secrets Manager, etc.)

